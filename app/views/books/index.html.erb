

    <p id="notice"></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

     <% @books.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td><%= list.body %></td>


        <td><%= link_to "show",book_path(list)%></td>
        <td><%= link_to "Edit",edit_book_path(list)%></td>
        <td><%= link_to "destroy", book_path(list), method: :delete, "data-confirm" => "Are you sure?" %>
      <% end %>
  </tbody>
</table>


<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model: @book, url:'/books', local:true do |f| %>

  <label>Title</label>
  <%= f.text_field :title %>
  <label>Body</label>
  <%= f.text_area :body %>
  <div>
  <%= f.submit 'Create Book' %>
   </div>
<% end %>

